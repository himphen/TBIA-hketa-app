<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/actionbar_title_text</item>
    </style>

    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="LeftMenuStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="IconCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="IconCardTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconCardInfoAreaStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:background">@null</item>
        <item name="layout_viewType">main</item>
    </style>

    <style name="FullCardStyle" parent="Widget.Leanback.BaseCardViewStyle">

    </style>

    <style name="VerticalGridView.FullWidth" parent="@style/Widget.Leanback.GridItems.VerticalGridView">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:verticalSpacing">2dp</item>
    </style>

    <style name="Eta.Card.RouteNumber" parent="">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Eta.Card.RouteNumber.Compact" parent="Eta.Card.RouteNumber">
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="Eta.Card.Minute.Container" parent="">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="Eta.Card.Minute.Text" parent="">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Eta.Card.Unit.Text" parent="">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Leanback.GuidanceIconStyle.IconWithPadding" parent="Widget.Leanback.GuidanceIconStyle">
        <item name="android:padding">24dp</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/mainButton</item>
        <item name="colorButtonNormal">@color/mainButton</item>
        <item name="colorControlHighlight">@color/secondaryText</item>
    </style>

    <style name="GreenButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/greenButton</item>
        <item name="colorButtonNormal">@color/greenButton</item>
        <item name="colorControlHighlight">@color/secondaryText</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="colorControlHighlight">@color/secondaryText</item>
    </style>

    <style name="Eta.Card.Mobile" parent="">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>