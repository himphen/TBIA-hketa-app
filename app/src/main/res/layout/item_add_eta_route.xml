<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <View
        android:id="@+id/routeCompanyColor"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/brand_color_kmb" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/routeNumberLl"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/routeNumberTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/primaryText"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="@string/demo_card_route_number" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/routeDirectionLl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/routeNumberLl"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/routeDirectionArrowIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_east_24"
                app:layout_constraintBottom_toTopOf="@id/routeSpTv"
                app:layout_constraintEnd_toStartOf="@id/routeDestTv"
                app:layout_constraintStart_toEndOf="@id/routeOrigTv"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/primaryText"
                tools:ignore="ContentDescription"
                tools:tint="@color/primaryText" />

            <TextView
                android:id="@+id/routeOrigTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/routeSpTv"
                app:layout_constraintEnd_toStartOf="@id/routeDirectionArrowIv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/add_card_route_text" />

            <TextView
                android:id="@+id/routeSpTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/secondaryText"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/routeDestTv"
                tools:text="@string/text_add_eta_destination_sp_mobile" />

            <TextView
                android:id="@+id/routeDestTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/routeSpTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/routeDirectionArrowIv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/add_card_route_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

