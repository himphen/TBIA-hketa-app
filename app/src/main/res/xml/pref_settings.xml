<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <PreferenceCategory android:title="@string/settings_category_settings_title">

        <Preference
            android:icon="@drawable/ic_translate_24"
            android:key="pref_settings_lang"
            android:title="@string/title_settings_language"
            app:isPreferenceVisible="false" />

        <Preference
            android:icon="@drawable/ic_settings_eta_layout_24"
            android:key="pref_settings_eta_layout"
            android:title="@string/title_activity_eta_layout" />
        <Preference
            android:icon="@drawable/ic_settings_eta_layout_24"
            android:key="pref_settings_default_company"
            android:title="@string/title_settings_default_company" />

        <Preference
            android:icon="@drawable/ic_settings_version_24"
            android:key="pref_settings_version"
            android:title="@string/title_settings_version"
            tools:summary="1.0.0" />

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_notices_title">
        <Preference
            android:icon="@drawable/ic_integration_instructions_24"
            android:key="pref_settings_acknowledgement"
            android:summary="@string/settings_acknowledgement_summary1"
            android:title="@string/settings_acknowledgement_title1" />

        <Preference
            android:icon="@drawable/ic_integration_instructions_24"
            android:key="pref_settings_acknowledgement2"
            android:summary="@string/settings_acknowledgement_summary2"
            android:title="@string/settings_acknowledgement_title2" />

        <Preference
            android:icon="@drawable/ic_integration_instructions_24"
            android:key="pref_settings_notice_1"
            android:summary="@string/settings_acknowledgement_summary3"
            android:title="@string/settings_acknowledgement_title3" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_ad_title">
        <CheckBoxPreference
            android:icon="@drawable/ic_ad_hide_24"
            android:key="pref_settings_hide_ad_banner"
            android:title="@string/settings_hide_ad_title" />

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/settings_category_debug_title">
        <Preference
            android:icon="@drawable/ic_settings_reset_24"
            android:key="pref_settings_reset"
            android:title="@string/title_settings_reset" />

    </PreferenceCategory>

</PreferenceScreen>